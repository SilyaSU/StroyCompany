<Window x:Class="StroyCompany.AddRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить запись" Height="300" Width="400">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Name="inputStackPanel" Margin="10"/>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Сохранить" Width="100" Height="100" Margin="0,5,10,5" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="100"  Height="100" Margin="0,5,0,5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
